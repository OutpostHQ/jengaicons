{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": true,
    "lib": ["ES2015"],
    "moduleResolution": "node",
    "strict": true,
    "types": ["node"],
    "jsx": "react",
    "importHelpers": false,
    "module": "ES2015",
    "target": "es2015",
    "declarationMap": false,
    "allowJs": true
  },
  "compileOnSave": false,
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
